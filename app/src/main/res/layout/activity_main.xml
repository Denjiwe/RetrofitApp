<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escolha a cidade"
            android:id="@+id/spCidade1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar"
            android:onClick="getweather1"
            android:layout_below="@id/spCidade1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTemperatura1"
            android:gravity="center_horizontal"
            android:layout_below="@id/btn1"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:hint="Temperatura será mostrada aqui"/>

        <TextView
            android:id="@+id/tvDescricao1"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTemperatura1"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:hint="Descrição do tempo será mostrada aqui"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvChuva1"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTemperatura1"
            android:layout_toEndOf="@id/tvDescricao1"
            android:gravity="center_horizontal"
            android:hint="Quantidade de chuva será mostrada aqui"
            android:textSize="30sp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escolha a cidade"
            android:layout_below="@id/tvDescricao1"
            android:id="@+id/spCidade2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar"
            android:onClick="getweather2"
            android:layout_below="@id/spCidade2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTemperatura2"
            android:gravity="center_horizontal"
            android:layout_below="@id/btn2"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:hint="Temperatura será mostrada aqui"/>

        <TextView
            android:id="@+id/tvDescricao2"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTemperatura2"
            android:gravity="center_horizontal"
            android:hint="Descrição do tempo será mostrada aqui"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvChuva2"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTemperatura2"
            android:layout_toEndOf="@id/tvDescricao2"
            android:gravity="center_horizontal"
            android:hint="Quantidade de chuva será mostrada aqui"
            android:textSize="30sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escolha a cidade"
            android:layout_below="@id/tvDescricao2"
            android:id="@+id/spCidade3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar"
            android:onClick="getweather3"
            android:layout_below="@id/spCidade3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTemperatura3"
            android:gravity="center_horizontal"
            android:layout_below="@id/btn3"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:hint="Temperatura será mostrada aqui"/>

        <TextView
            android:id="@+id/tvDescricao3"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTemperatura3"
            android:gravity="center_horizontal"
            android:hint="Descrição do tempo será mostrada aqui"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvChuva3"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTemperatura3"
            android:layout_toEndOf="@id/tvDescricao3"
            android:gravity="center_horizontal"
            android:hint="Quantidade de chuva será mostrada aqui"
            android:textSize="30sp" />

    </RelativeLayout>
</ScrollView>